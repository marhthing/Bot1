# MATDEV Bot Configuration Template
# Copy this file to .env and configure your settings

# ================================
# ESSENTIAL SETTINGS
# ================================

# Bot Identity
BOT_NAME=MATDEV
SESSION_ID=
OWNER_NUMBER=

# Bot Behavior
PREFIX=.
PUBLIC_MODE=false
AUTO_TYPING=true
AUTO_READ=true
AUTO_STATUS_VIEW=true
REJECT_CALLS=true

# ================================
# PERFORMANCE SETTINGS
# ================================

# Message Processing
MAX_CONCURRENT_MESSAGES=5
MESSAGE_TIMEOUT=30000
CACHE_TTL=3600

# ================================
# SECURITY FEATURES
# ================================

# Anti-Ban Protection
ANTI_BAN=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=20

# ================================
# MEDIA SETTINGS
# ================================

# File Size Limits (in bytes)
MAX_MEDIA_SIZE=104857600
# Allowed Media Types (comma-separated)
ALLOWED_MEDIA_TYPES=image,video,audio,document

# ================================
# LOGGING CONFIGURATION
# ================================

# Log Levels: error, warn, info, debug
LOG_LEVEL=info
LOG_TO_FILE=false

# ================================
# ADVANCED FEATURES
# ================================

# Plugin System
PLUGIN_AUTO_LOAD=true
STARTUP_MESSAGE=true
STATUS_REPORTS=true

# ================================
# EXTERNAL SERVICES
# ================================

# Weather API (OpenWeatherMap)
WEATHER_API_KEY=

# News API
NEWS_API_KEY=

# Remove.bg API (for background removal)
REMOVE_BG_API_KEY=

# ================================
# DATABASE (OPTIONAL)
# ================================

# If using external database
DATABASE_URL=
REDIS_URL=

# ================================
# DEPLOYMENT SETTINGS
# ================================

# Server Port
PORT=8000

# Environment
NODE_ENV=production

# Regional Settings
TIMEZONE=UTC
LANGUAGE=en

# ================================
# HOSTING PLATFORM
# ================================

# Automatically detected, but you can override:
# PLATFORM=heroku|render|railway|koyeb|vps

# ================================
# ADVANCED SECURITY
# ================================

# Rate Limiting
COMMAND_RATE_LIMIT=10
AUTO_RESPONSE_LIMIT=3

# Security Features
ENABLE_ANTI_SPAM=true
ENABLE_AUTO_BLOCK=true
SUSPICIOUS_ACTIVITY_THRESHOLD=10

# ================================
# PERFORMANCE OPTIMIZATION
# ================================

# Memory Management
ENABLE_MEMORY_MONITORING=true
MEMORY_WARNING_THRESHOLD=500
MEMORY_CRITICAL_THRESHOLD=1000

# Cache Configuration
ENABLE_SMART_CACHE=true
CACHE_CLEANUP_INTERVAL=1800
MAX_CACHE_SIZE=1000

# ================================
# FEATURE FLAGS
# ================================

# Enable/Disable Features
ENABLE_MEDIA_PROCESSING=true
ENABLE_AUTO_RESPONSES=true
ENABLE_GROUP_FEATURES=true
ENABLE_ADMIN_COMMANDS=true

# ================================
# MONITORING & ALERTS
# ================================

# Status Reporting
ENABLE_STATUS_REPORTS=true
STATUS_REPORT_INTERVAL=21600

# Health Monitoring
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=3600

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Debug Features (disable in production)
ENABLE_DEBUG_MODE=false
ENABLE_EVAL_COMMAND=false
ENABLE_DETAILED_ERRORS=false

# ================================
# BACKUP & RECOVERY
# ================================

# Session Management
AUTO_BACKUP_SESSION=true
SESSION_BACKUP_INTERVAL=86400
MAX_SESSION_BACKUPS=5

# Data Retention
TEMP_FILE_TTL=86400
LOG_RETENTION_DAYS=7
CACHE_RETENTION_HOURS=24

# ================================
# CUSTOMIZATION
# ================================

# Bot Personality
BOT_RESPONSE_STYLE=professional
AUTO_RESPONSE_CHANCE=0.1
GREETING_MESSAGES=true

# Command Behavior
COMMAND_CASE_SENSITIVE=false
ALLOW_COMMAND_ALIASES=true
SHOW_COMMAND_USAGE=true

# ================================
# IMPORTANT NOTES
# ================================

# 1. SESSION_ID is required for production deployment
# 2. OWNER_NUMBER should be your WhatsApp number with country code
# 3. Keep this file secure and never commit it to version control
# 4. Some features require external API keys
# 5. Adjust performance settings based on your server capacity
# 6. Enable logging for debugging, disable for production
# 7. Configure rate limiting to prevent abuse
# 8. Set appropriate time zones for your region
